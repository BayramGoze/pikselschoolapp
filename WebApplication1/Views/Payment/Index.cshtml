@model  WebApplication1.ViewModels.Payment.PaymentResponseViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/vendor/jquery/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        var path_to_delete;
        $(".deleteItem").click(function (e) {
            path_to_delete = $(this).data('path');
        });
        $('#confirmDeleteBtn').click(function () {
            var id = $('#deleteItem').data('path');
            $.ajax({
                type: "GET",
                url: '/Payment/DeleteStudent?Id=' + id, // the method we are calling
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    window.location.reload();
                    $('#confirmDeleteModal').hide();
                },
                error: function (result) {
                    alert('Sistemsel bir hata oluştu!');
                }
            });
        });
        $('.edit').click(function (e) {
            var id = $(this).data('path');
            $.ajax({
                type: "GET",
                url: '/Payment/GetStudent?ID=' + id,
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    $('#UpdateModal').modal('show');
                    $('#StudentName').val(result.StudentName);
                    $('#CourseId').val(result.CourseId);
                    $('#CourseAmount').val(result.CourseAmount);              
                    $('#PaymentDay').val(result.PaymentDay);
                    $('#ID').val(result.ID);
                    $('#PaymentType').val(result.PaymentType);               
                    $('#InstalmentCount').val(result.InstalmentCount);
                },
                error: function (result) {
                    alert('Sistemsel bir hata oluştu!');
                }
            });
        });
        $('#students').on('change', function () {
            var id = this.value;
            $.ajax({
                type: "GET",
                url: '/Payment/GetCourseByStudentId?studentId=' + id,
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    if (result.length > 0) {
                        $('#courses').empty().append('<option selected="selected" value="0">Kurs Seçiniz</option>');
                        var $dropdown = $("#courses");
                        $.each(result, function () {
                            $dropdown.append($("<option />").val(this.Id).text(this.CourseName));
                        });
                    }
                    else {
                        $('#courses').empty().append('<option selected="selected" value="0">Kurs Seçiniz</option>');
                    }
                },
                error: function (result) {
                    alert('Sistemsel bir hata oluştu!');
                }
            });
        });
    });
</script>
<div class="container">
    <div style="overflow-y:auto">
